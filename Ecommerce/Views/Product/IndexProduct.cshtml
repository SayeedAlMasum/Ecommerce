@* Product/IndexProduct.cshtml *@
@model IEnumerable<Ecommerce.Models.Product>
@{
    ViewData["Title"] = "Products";
    var categoryId = ViewBag.CategoryId;
}
<h2>Products</h2>
<a asp-action="CreateProduct" asp-route-categoryId="@categoryId" class="btn btn-success mb-3">Add New Product</a>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Image</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
                <td><img src="@item.ImageUrl" width="60" /></td>
                <td>
                    <a asp-action="EditProduct" asp-route-id="@item.ProductId" class="btn btn-warning btn-sm">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
